{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "article_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category-article.category-article",
      "inversedBy": "articles"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "audio": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files",
        "audios"
      ]
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "article"
    },
    "comments_count": {
      "type": "integer",
      "default": 0,
      "min": 0
    }
  }
}
