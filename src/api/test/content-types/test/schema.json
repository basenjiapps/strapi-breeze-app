{
  "kind": "collectionType",
  "collectionName": "tests",
  "info": {
    "singularName": "test",
    "pluralName": "tests",
    "displayName": "Test",
    "description": "Quiz/Test entity"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "test_id": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "analyticsNameId": {
      "type": "string",
      "required": true
    },
    "test_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::test-category.test-category",
      "inversedBy": "tests"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "question_count": {
      "type": "integer",
      "default": 1,
      "min": 1
    },
    "test_time": {
      "type": "integer",
      "required": false,
      "default": 1,
      "min": 1
    },
    "scoring_type": {
      "type": "enumeration",
      "enum": [
        "total_sum",
        "group_sum_max",
        "group_sum_threshold_multi",
        "total_plus_groups",
        "rule_based",
        "custom"
      ]
    },
    "short_description": {
      "type": "string",
      "maxLength": 150,
      "required": true
    },
    "description": {
      "type": "text"
    },
    "benefits": {
      "type": "component",
      "component": "test.what-you-get",
      "repeatable": true
    },
    "testSharingText": {
      "type": "string"
    },
    "notification": {
      "type": "text"
    },
    "push": {
      "type": "text"
    },
    "questions": {
      "type": "component",
      "component": "test.question",
      "repeatable": true
    },
    "results": {
      "type": "component",
      "component": "test.result",
      "repeatable": true
    },
    "chapters": {
      "type": "component",
      "component": "test.chapter",
      "repeatable": true
    },
    "insights": {
      "type": "component",
      "component": "test.insight",
      "repeatable": true
    },
    "researchBase": {
      "type": "richtext"
    }
  }
}
